<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <Version>1.2.1.0</Version>
    <ApplicationIcon>Icon.ico</ApplicationIcon>
  </PropertyGroup>

  <Choose>
    <When Condition="'$(Configuration)' == 'Debug'">
      <Choose>
        <!--In Debug mode, we determine the OS based on the machine building the project.-->
        <When Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
          </PropertyGroup>
        </When>
        <Otherwise>
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
          </PropertyGroup>
        </Otherwise>
      </Choose>
    </When>
    <When Condition="'$(Configuration)' == 'Release'">
      <Choose>
        <!--In Release mode, we determine the OS based on the runtime identifier.-->
        <When Condition="'$(RuntimeIdentifier)' == 'win-x64'">
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
          </PropertyGroup>
        </When>
        <Otherwise>
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
          </PropertyGroup>
        </Otherwise>
      </Choose>
    </When>
  </Choose>

  <PropertyGroup Label="Decrease executable size">
    <UseSystemResourceKeys>true</UseSystemResourceKeys>
    <IlcDisableReflection>false</IlcDisableReflection> <!--TODO: See if this can be enabled in the future. Currently it seems HttpClient or HttpRequestMessage use Reflection. Also we are using it to get the current version of the launcher.-->
    <IlcOptimizationPreference>Size</IlcOptimizationPreference>
    <EnableUnsafeBinaryFormatterSerialization>false</EnableUnsafeBinaryFormatterSerialization>
    <IlcGenerateStackTraceData>false</IlcGenerateStackTraceData>
    <EventSourceSupport>false</EventSourceSupport>
    <IlcFoldIdenticalMethodBodies>false</IlcFoldIdenticalMethodBodies>
    <StripSymbols>true</StripSymbols>
  </PropertyGroup>

</Project>
