@typeparam TGetDto
@typeparam TSorting
@inject AuthenticationStateProvider Auth
@inject NavigationManager NavigationManager
@using DevilDaggersInfo.Web.Client.Components
@using DevilDaggersInfo.Web.Client.Enums

<Heading Title="@Title" />

<p class="para">Hello, @_username</p>

@if (_errorMessage != null)
{
	<ResultBar Title="Failed to retrieve overview" ResultBarType="ResultBarType.FatalError" DismissEvent="Dismiss">
		@_errorMessage
	</ResultBar>
}

@if (_page == null)
{
	if (!_errorThrown)
	{
		<Loading />
	}
}
else
{
	<Deletion AfterDelete="Fetch" ApiCall="@DeletionApiCall" @ref="_deletion" />

	<div class="bg-gray-1 p-2 text-lg">
		<a class="btn btn-green block w-24 mb-2 mx-1" href="@($"{NavigationManager.Uri}/add")">Add new</a>

		<div class="m-1">
			<span>Filter</span>
			<input class="bg-black border-gray-3 border-2" value="@Filter" @onchange="ChangeFilter" />
		</div>

		<CascadingValue Value="this">
			<Paging />
		</CascadingValue>
	</div>

	<div class="overflow-x-auto">
		<table class="table-auto">
			<thead>
				<tr>
					@TableHeader
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@{
					int i = 0;
					foreach (TGetDto result in _page.Results)
					{
						<tr class="@(i++ % 2 == 0 ? "bg-gray-1" : null)">
							@RowTemplate(result)
							<td><a class="link" href="@($"{NavigationManager.Uri}/edit/{result.Id}")">Edit</a></td>
							<td><a class="link" href="" @onclick="() => _deletion?.Set(result.Id)" @onclick:preventDefault>Delete</a></td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
}
