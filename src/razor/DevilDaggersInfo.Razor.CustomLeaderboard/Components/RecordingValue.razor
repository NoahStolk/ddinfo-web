@inherits FluxorComponent
@typeparam T
@inject IState<RecordingState> RecordingState
@using DevilDaggersInfo.Razor.CustomLeaderboard.Store.State
@using Fluxor
@using DevilDaggersInfo.App.Core.GameMemory

@{
	T c = Selector(RecordingState.Value.Block);
	T p = Selector(RecordingState.Value.BlockPrevious);
	bool equal = c.Equals(p);
}

<span style="@(equal ? null : $"color: {ColorCode}")">
	@(Format == null ? c : Format(c))
</span>

@code
{
	[Parameter]
	[EditorRequired]
	public Func<MainBlock, T> Selector { get; set; } = null!;

	[Parameter]
	[EditorRequired]
	public string ColorCode { get; set; } = null!;

	[Parameter]
	public Func<T, string>? Format { get; set; }
}
