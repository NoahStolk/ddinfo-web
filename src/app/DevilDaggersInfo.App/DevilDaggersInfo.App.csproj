<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>ddinfo-tools</AssemblyName>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>SA1633</NoWarn>
    <Version>0.5.1.2</Version>
    <ApplicationIcon>Icon.ico</ApplicationIcon>
    <EnableTrimAnalyzer>true</EnableTrimAnalyzer>
    <SuppressTrimAnalysisWarnings>false</SuppressTrimAnalysisWarnings>
    
    <!--This is required because the Silk.NET "Input" and "Windowing" libraries are not trim-compatible (this is planned for Silk.NET 3.0).-->
    <!--If we do not set TrimMode to partial, Silk.NET will throw a System.PlatformNotSupportedException when the assemblies are trimmed.-->
    <!--Partial trimming only adds around 2 MB to the executable size, which isn't too bad considering no trimming wastes around 25 MB.-->
    <TrimMode>partial</TrimMode>
  </PropertyGroup>

  <PropertyGroup Condition="'$(CI)' == 'true'">
    <DefineConstants>$(DefineConstants);SKIP_VALUE</DefineConstants>
  </PropertyGroup>

  <Choose>
    <When Condition="'$(Configuration)' == 'Debug'">
      <Choose>
        <!--In Debug mode, we determine the OS based on the machine building the project.-->
        <When Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
            <OutputType>WinExe</OutputType>
          </PropertyGroup>
        </When>
        <Otherwise>
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
            <OutputType>Exe</OutputType>
          </PropertyGroup>
        </Otherwise>
      </Choose>
    </When>
    <When Condition="'$(Configuration)' == 'Release'">
      <Choose>
        <!--In Release mode, we determine the OS based on the runtime identifier.-->
        <When Condition="'$(RuntimeIdentifier)' == 'win-x64'">
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
            <OutputType>WinExe</OutputType>
          </PropertyGroup>
        </When>
        <Otherwise>
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
            <OutputType>Exe</OutputType>
          </PropertyGroup>
        </Otherwise>
      </Choose>
    </When>
  </Choose>

  <ItemGroup Label="Trimming configuration">
    <TrimmerRootDescriptor Include="TrimmerRoots.xml" />
  </ItemGroup>

  <ItemGroup Label="Internal dependencies">
    <ProjectReference Include="..\..\api\DevilDaggersInfo.Api.App\DevilDaggersInfo.Api.App.csproj" />
    <ProjectReference Include="..\..\common\DevilDaggersInfo.Common\DevilDaggersInfo.Common.csproj" />
    <ProjectReference Include="..\..\core\DevilDaggersInfo.Core.CriteriaExpression\DevilDaggersInfo.Core.CriteriaExpression.csproj" />
    <ProjectReference Include="..\..\core\DevilDaggersInfo.Core.Encryption\DevilDaggersInfo.Core.Encryption.csproj" />
    <ProjectReference Include="..\..\core\DevilDaggersInfo.Core.Mod\DevilDaggersInfo.Core.Mod.csproj" />
    <ProjectReference Include="..\..\core\DevilDaggersInfo.Core.Spawnset\DevilDaggersInfo.Core.Spawnset.csproj" />
    <ProjectReference Include="..\..\core\DevilDaggersInfo.Core.Versioning\DevilDaggersInfo.Core.Versioning.csproj" />
    <ProjectReference Include="..\DevilDaggersInfo.App.Core.GameMemory\DevilDaggersInfo.App.Core.GameMemory.csproj" />
    <ProjectReference Include="..\DevilDaggersInfo.App.Engine\DevilDaggersInfo.App.Engine.csproj" />
  </ItemGroup>

  <ItemGroup Label="External dependencies">
    <PackageReference Include="NativeFileDialogSharp" />
    <PackageReference Include="Serilog.Sinks.File" />
  </ItemGroup>

</Project>
