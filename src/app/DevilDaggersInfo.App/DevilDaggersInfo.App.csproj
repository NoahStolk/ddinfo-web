<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>SA1633</NoWarn>
    <Version>0.4.2.0</Version>
  </PropertyGroup>

  <Choose>
    <When Condition="'$(Configuration)' == 'Debug'">
      <Choose>
        <!--In Debug mode, we determine the OS based on the machine building the project.-->
        <When Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::Windows)))' == 'true'">
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
            <OutputType>WinExe</OutputType>
          </PropertyGroup>
        </When>
        <Otherwise>
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
            <OutputType>Exe</OutputType>
          </PropertyGroup>
        </Otherwise>
      </Choose>
    </When>
    <When Condition="'$(Configuration)' == 'Release'">
      <Choose>
        <!--In Release mode, we determine the OS based on the runtime identifier.-->
        <When Condition="'$(RuntimeIdentifier)' == 'win-x64'">
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);WINDOWS</DefineConstants>
            <OutputType>WinExe</OutputType>
          </PropertyGroup>
        </When>
        <Otherwise>
          <PropertyGroup>
            <DefineConstants>$(DefineConstants);LINUX</DefineConstants>
            <OutputType>Exe</OutputType>
          </PropertyGroup>
        </Otherwise>
      </Choose>
    </When>
  </Choose>

  <PropertyGroup>
    <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    <CompilerGeneratedFilesOutputPath>obj\SourceGenOutput</CompilerGeneratedFilesOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
    <None Include="$(CompilerGeneratedFilesOutputPath)/**/*.cs" />
  </ItemGroup>

  <ItemGroup>
    <TrimmerRootDescriptor Include="TrimmerRoots.xml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\core\DevilDaggersInfo.Core.Spawnset\DevilDaggersInfo.Core.Spawnset.csproj" />
    <ProjectReference Include="..\DevilDaggersInfo.App.Ui.CustomLeaderboardsRecorder\DevilDaggersInfo.App.Ui.CustomLeaderboardsRecorder.csproj" />
    <ProjectReference Include="..\DevilDaggersInfo.App.Ui.ReplayEditor\DevilDaggersInfo.App.Ui.ReplayEditor.csproj" />
    <ProjectReference Include="..\DevilDaggersInfo.App.Ui.SurvivalEditor\DevilDaggersInfo.App.Ui.SurvivalEditor.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NoahStolk.Warp.NET" />
  </ItemGroup>

</Project>
