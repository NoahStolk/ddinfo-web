@using DevilDaggersInfo.Api.Main.Tools
@using DevilDaggersInfo.Core.Common

@foreach (GetToolVersion tv in ToolVersions)
{
	if (tv.Changes == null)
		continue;

	string? downloadCountText = tv.Date > Constants.TrackingToolDownloadCounts ? $" ({tv.DownloadCount:N0} download{(tv.DownloadCount == 1 ? null : "s")})" : null;
	string title = $"{tv.VersionNumber} - {tv.Date.ToString(StringFormats.DateFormat)}{downloadCountText}";
	<Heading Title="@title" Level="3" />
	@foreach (GetToolVersionChange c in tv.Changes)
	{
		<Change GetChange="c" />
	}
}

@code
{
	[Parameter]
	[EditorRequired]
	public required IReadOnlyList<GetToolVersion> ToolVersions { get; set; }
}
