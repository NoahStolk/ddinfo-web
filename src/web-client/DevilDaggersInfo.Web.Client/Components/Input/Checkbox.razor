<button class="@($"border-gray-3 border-2 w-8 h-8")" @onclick="Toggle">
	@if (CurrentValue)
	{
		@MarkupStrings.Checkmark
	}
</button>

@code
{
	[Parameter]
	[EditorRequired]
	public bool CurrentValue { get; set; }
	
	[Parameter]
	[EditorRequired]
	public EventCallback<bool> Selected { get; set; }

	private async Task Toggle()
	{
		CurrentValue = !CurrentValue;
		await Selected.InvokeAsync(CurrentValue);
		StateHasChanged();
	}
}
