@using DevilDaggersInfo.Razor.Core.Components.Components
@inherits InputBase<bool?>

<OutsideClickHandler OnClickOutside="OnClickOutside" CssClass="inline-block w-64 bg-gray-1 text-color-text">
	<div class="grid grid-cols-8">
		<span class="input-list-opener pl-2 col-span-7" @onclick="_ => _show = !_show">@SelectedDisplayValue</span>
		<span class="input-list-button" @onclick="_ => HandleSelect(null)">âœ•</span>
	</div>
	<div class="@(_show ? "absolute" : "hidden") z-10">
		<ul class="max-h-screen-half w-64 border-[#fff8] border-2">
			<li class="input-list-entry" @onclick="_ => HandleSelect(null)">Unknown</li>
			<li class="input-list-entry" @onclick="_ => HandleSelect(false)">@False</li>
			<li class="input-list-entry" @onclick="_ => HandleSelect(true)">@True</li>
		</ul>
	</div>
</OutsideClickHandler>
