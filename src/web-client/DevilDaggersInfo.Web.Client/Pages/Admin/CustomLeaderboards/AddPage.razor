@page "/admin/custom-leaderboards/add"
@inherits BaseAdminPage
@using DevilDaggersInfo.Api.Admin.CustomLeaderboards
@using DevilDaggersInfo.Api.Admin.Spawnsets
@using DevilDaggersInfo.Web.Client.Enums

<AdminAuthorizer Base="this" RequiredRole="@Roles.CustomLeaderboards">
	<AdminAdd Name="Custom Leaderboard" OverviewUrl="/admin/custom-leaderboards" ApiCall="Http.AddCustomLeaderboard" Model="_addCustomLeaderboard" OnPopulate="async (ac) => await PopulateAsync(ac)">
		<InputWrapper Label="Spawnset"><SearchDropdown TKey="int" Values="@_spawnsetNames" Converter="s => int.Parse(s)" @bind-Value="@_addCustomLeaderboard.SpawnsetId" /></InputWrapper>
		<InputWrapper Label="Category"><SearchDropdown TKey="CustomLeaderboardCategory" Values="@(Enum.GetValues<CustomLeaderboardCategory>().ToDictionary(e => e, e => e.ToString()))" Converter="s => Enum.Parse<CustomLeaderboardCategory>(s)" ShowDisplayValue="false" @bind-Value="@_addCustomLeaderboard.Category" /></InputWrapper>
		<InputWrapper Label="Featured"><InputCheckbox @bind-Value="@_addCustomLeaderboard.IsFeatured" /></InputWrapper>
		@if (_addCustomLeaderboard.IsFeatured)
		{
			<InputWrapper Label="Bronze"><InputNumber class="admin-input" @bind-Value="_addCustomLeaderboard.Daggers.Bronze" /></InputWrapper>
			<InputWrapper Label="Silver"><InputNumber class="admin-input" @bind-Value="_addCustomLeaderboard.Daggers.Silver" /></InputWrapper>
			<InputWrapper Label="Golden"><InputNumber class="admin-input" @bind-Value="_addCustomLeaderboard.Daggers.Golden" /></InputWrapper>
			<InputWrapper Label="Devil"><InputNumber class="admin-input" @bind-Value="_addCustomLeaderboard.Daggers.Devil" /></InputWrapper>
			<InputWrapper Label="Leviathan"><InputNumber class="admin-input" @bind-Value="_addCustomLeaderboard.Daggers.Leviathan" /></InputWrapper>
		}

		<Heading Level="2" Title="Criteria" />

		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.GemsCollected" Criteria="_addCustomLeaderboard.GemsCollectedCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.GemsDespawned" Criteria="_addCustomLeaderboard.GemsDespawnedCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.GemsEaten" Criteria="_addCustomLeaderboard.GemsEatenCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.EnemiesKilled" Criteria="_addCustomLeaderboard.EnemiesKilledCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.DaggersFired" Criteria="_addCustomLeaderboard.DaggersFiredCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.DaggersHit" Criteria="_addCustomLeaderboard.DaggersHitCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.HomingStored" Criteria="_addCustomLeaderboard.HomingStoredCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.HomingEaten" Criteria="_addCustomLeaderboard.HomingEatenCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.DeathType" Criteria="_addCustomLeaderboard.DeathTypeCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Time" Criteria="_addCustomLeaderboard.TimeCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.LevelUpTime2" Criteria="_addCustomLeaderboard.LevelUpTime2Criteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.LevelUpTime3" Criteria="_addCustomLeaderboard.LevelUpTime3Criteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.LevelUpTime4" Criteria="_addCustomLeaderboard.LevelUpTime4Criteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.EnemiesAlive" Criteria="_addCustomLeaderboard.EnemiesAliveCriteria" />
		
		<Heading Level="2" Title="Enemy criteria" />
		
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Skull1Kills" Criteria="_addCustomLeaderboard.Skull1KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Skull2Kills" Criteria="_addCustomLeaderboard.Skull2KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Skull3Kills" Criteria="_addCustomLeaderboard.Skull3KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Skull4Kills" Criteria="_addCustomLeaderboard.Skull4KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.SpiderlingKills" Criteria="_addCustomLeaderboard.SpiderlingKillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.SpiderEggKills" Criteria="_addCustomLeaderboard.SpiderEggKillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Squid1Kills" Criteria="_addCustomLeaderboard.Squid1KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Squid2Kills" Criteria="_addCustomLeaderboard.Squid2KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Squid3Kills" Criteria="_addCustomLeaderboard.Squid3KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.CentipedeKills" Criteria="_addCustomLeaderboard.CentipedeKillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.GigapedeKills" Criteria="_addCustomLeaderboard.GigapedeKillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.GhostpedeKills" Criteria="_addCustomLeaderboard.GhostpedeKillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Spider1Kills" Criteria="_addCustomLeaderboard.Spider1KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Spider2Kills" Criteria="_addCustomLeaderboard.Spider2KillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.LeviathanKills" Criteria="_addCustomLeaderboard.LeviathanKillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.OrbKills" Criteria="_addCustomLeaderboard.OrbKillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.ThornKills" Criteria="_addCustomLeaderboard.ThornKillsCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Skull1sAlive" Criteria="_addCustomLeaderboard.Skull1sAliveCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Skull2sAlive" Criteria="_addCustomLeaderboard.Skull2sAliveCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Skull3sAlive" Criteria="_addCustomLeaderboard.Skull3sAliveCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Skull4sAlive" Criteria="_addCustomLeaderboard.Skull4sAliveCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.SpiderlingsAlive" Criteria="_addCustomLeaderboard.SpiderlingsAliveCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.SpiderEggsAlive" Criteria="_addCustomLeaderboard.SpiderEggsAliveCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Squid1sAlive" Criteria="_addCustomLeaderboard.Squid1sAliveCriteria" />
		<CriteriaField CriteriaType="CustomLeaderboardCriteriaType.Squid2sAlive" Criteria="_addCustomLeaderboard.Squid2sAliveCriteria" />
